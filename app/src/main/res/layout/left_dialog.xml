<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="新建账本"
        android:textAlignment="center"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey"/>

        <RadioGroup
            android:id="@+id/bt_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <RadioButton
                android:id="@+id/color_rb1"
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/grey_bt"
                />
            <RadioButton
                android:id="@+id/color_rb2"
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/red_bt"
                />
            <RadioButton
                android:id="@+id/color_rb3"
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/green_bt"
                />
            <RadioButton
                android:id="@+id/color_rb4"
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/yellow_bt"
                />
        </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey"/>

</LinearLayout>