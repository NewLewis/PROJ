<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.py.terminal.MainActivity">

    <!--这里是从主界面的listview点进去以后看到的每日账单界面-->
    <!--没想到这里还有一个界面，惊不惊喜！意不意外！-->

    <RelativeLayout
        android:id="@+id/relaytive1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/daily_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日账单"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaytive2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relaytive1">
        <ImageView
            android:id="@+id/daily_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:background="@drawable/bk3"/>
        <!--Button
            android:id="@+id/daily_yesterday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="40dp"
            android:background="@drawable/yesterday"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/daily_calendar"/-->
        <LinearLayout
            android:id="@+id/daily_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="true">
            <TextView
                android:id="@+id/daily_week"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="星期六"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:padding="0dp"/>
            <TextView
                android:id="@+id/daily_date"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical"
                android:text="23"
                android:textSize="50dp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:padding="0dp"/>
            <TextView
                android:id="@+id/daily_month"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="2017年12月"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:padding="0dp"/>
        </LinearLayout>
        <!--Button
            android:id="@+id/daily_tomorrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="40dp"
            android:background="@drawable/tomorrow"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/daily_calendar"/-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaytive3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relaytive2">
        <TextView
            android:id="@+id/daily_incomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="总收入\n0.00"
            android:textSize="15dp"
            android:singleLine="false"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/daily_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="总支出\n0.00"
            android:textSize="15dp"
            android:singleLine="false"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/daily_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relaytive3">
    </ListView>

    <TextView
        android:id="@+id/jilu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当天没有记录哦"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/relaytive3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>