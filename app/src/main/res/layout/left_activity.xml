<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pjr.proj.LeftActivity">

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/linegrey"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/deco1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:src="@mipmap/feiji"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <TextView
        android:id="@+id/deco2"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="每天积累一点点"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintLeft_toRightOf="@id/deco1"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/line2"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/linegrey"
        app:layout_constraintTop_toBottomOf="@id/deco1"/>

    <TextView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:text="我的账本"
        android:textSize="18dp"
        android:textColor="@color/darkGrey"
        android:layout_margin="2dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/line3"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/linegrey"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/nav"/>

    <GridView
        android:id="@+id/book_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:numColumns="3"
        app:layout_constraintBottom_toTopOf="@id/bot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3" />

    <TextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/linegrey"
        app:layout_constraintBottom_toTopOf="@id/bot"/>
    <ImageView
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@mipmap/huojian"
        app:layout_constraintBottom_toTopOf="@id/text_bot"
        />
    <TextView
        android:id="@+id/text_bot"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="10dp"
        android:textAlignment="center"
        android:text="新建账本"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageButton
        android:id="@+id/com_bt"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/del_bt"
        android:background="@mipmap/check"
        android:visibility="invisible"
        />
    <ImageButton
        android:id="@+id/del_bt"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/com_bt"
        app:layout_constraintRight_toLeftOf="@+id/edi_bt"
        android:background="@mipmap/cancel"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/edi_bt"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/del_bt"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/edit"
        android:visibility="invisible"
        />
</android.support.constraint.ConstraintLayout>
